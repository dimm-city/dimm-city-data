{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "game"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "system": {
      "type": "enumeration",
      "enum": [
        "WAA",
        "Quest",
        "Twine",
        "Ink"
      ],
      "required": true,
      "default": "WAA"
    },
    "owner": {
      "type": "component",
      "repeatable": false,
      "component": "blockchain.wallet"
    },
    "mainImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "content": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "configuration": {
      "type": "json"
    }
  }
}
