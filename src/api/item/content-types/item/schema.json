      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100
    },
    "slug": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "richtext",
      "maxLength": 500
