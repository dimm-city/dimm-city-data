{
  "kind": "collectionType",
  "collectionName": "journal_entries",
  "info": {
    "singularName": "journal-entry",
    "pluralName": "journal-entries",
    "displayName": "Old: Journal Entry",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "metadataUri": {
      "type": "string"
    },
    "thumbnailUrl": {
      "type": "string"
    },
    "videoUrl": {
      "type": "string"
    },
    "imageUrl": {
      "type": "string"
    },
    "audioUrl": {
      "type": "string"
    },
    "contentUrl": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "metadata": {
      "type": "json"
    },
    "description": {
      "type": "richtext",
      "maxLength": 5000
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 500
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "text",
        "content",
        "media"
      ],
      "default": "text",
      "required": true
    },
    "recordedAt": {
      "type": "datetime",
      "required": false,
      "default": "2022-10-31T05:00:00.000Z"
    },
    "tags": {
      "type": "string",
      "required": false,
      "maxLength": 250,
      "minLength": 3,
      "regex": "^\\w+(\\s*,\\s*\\w+)*$"
    }
  }
}
