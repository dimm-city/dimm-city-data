{
  "kind": "collectionType",
  "collectionName": "dc-abilities",
  "info": {
    "singularName": "ability",
    "pluralName": "abilities",
    "displayName": "DC: Abilities",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "ap": {
      "type": "integer",
      "default": 0
    },
    "maxAP": {
      "type": "integer",
      "default": 0,
      "max": 100
    },
    "rollDice": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "skillTrees": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::dimm-city.skill-tree",
      "mappedBy": "abilities"
    },
    "cybernetic": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "shortDescription": {
      "type": "text",
      "required": false
    }
  }
}